<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GetZutrQuestionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="4dp"
            android:text="What Subject?"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spnSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="How can we help?"
            android:layout_margin="16dp"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/multetQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:padding="4dp"
            android:hint="be as descriptive as possible"
            android:inputType="textMultiLine"
            android:layout_margin="16dp"
            tools:text="be as descriptive as possible " />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_margin="16dp"
            android:text="Set Price"
            android:textSize="24sp" />

        <SeekBar
            android:id="@+id/sbWage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_margin="16dp" />

        <EditText
            android:id="@+id/tvWage"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="16dp"
            android:inputType="numberDecimal"
            android:textSize="18sp"
            tools:text="8.56$" />

        <Button
            android:id="@+id/btnSmtQues"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Submit Question Request" />
    </LinearLayout>

</FrameLayout>