<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@color/white"
    tools:context=".fragments.OpenSessionsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="298dp"
                android:layout_height="60dp"
                android:layout_alignTop="@+id/svSearch"
                android:layout_alignBottom="@+id/svSearch"
                android:layout_gravity="center"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="-49dp"
                android:layout_marginBottom="0dp"
                android:layout_toStartOf="@+id/svSearch"
                android:background="@drawable/background"
                android:gravity="center"
                android:padding="5dp"
                android:paddingEnd="20dp"
                android:text="Help a Student"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp">

            </TextView>

            <SearchView
                android:id="@+id/svSearch"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/background"
                android:foregroundTint="@color/colorPrimaryDark"
                android:inputType="text" />


        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>
</FrameLayout>