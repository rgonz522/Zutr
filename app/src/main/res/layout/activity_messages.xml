<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_container"
    android:backgroundTint="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlMessages"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etNewMessage"
            android:layout_below="@+id/tvOpponentName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="34dp"
            android:backgroundTint="@color/colorLilac">

        </androidx.recyclerview.widget.RecyclerView>

        <EditText
            android:id="@+id/etNewMessage"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/btnLatexDialog"
            android:ems="10"
            android:hint="Say hi."
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSendMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnLatexDialog"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/etNewMessage"
            android:text="Send" />

        <Button
            android:id="@+id/btnLatexDialog"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rvMessages"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="0dp"

            android:background="@drawable/background"
            android:backgroundTint="@color/colorAccent"
            android:padding="0dp"
            android:text="\?" />

        <TextView
            android:id="@+id/tvOpponentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:text="Beyonce Ruix" />

    </RelativeLayout>

</FrameLayout>